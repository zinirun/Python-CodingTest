   "source": [
    "def solution(people, limit):\n",
    "    answer = len(people)\n",
    "    p = sorted(people,reverse = True)\n",
    "    s,e = 0, len(p)-1\n",
    "    while s < e : \n",
    "        if p[s]+p[e] <= limit :\n",
    "            e-=1\n",
    "            answer-=1\n",
    "        s+=1\n",
    "    return answer"
   ]
  }
